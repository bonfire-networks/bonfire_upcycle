<div class="w-full border-b-2" x-data="{ open: false }">
  <div class="p-4 m-4 rounded-md">
    <div class="grid grid-cols-2 p-3 rounded-lg shadow bg-base-100">
      <div>
        <div class="text-xl font-bold">
          {l("From")}
        </div>
        <LiveRedirect
          to={~p"/user/" <> e(@event, :provider, :name, "Unknown")}
          class="flex items-center gap-3"
        >
          <Bonfire.UI.Common.AvatarLive
            class="w-12 h-12 rounded-lg bg-base-content/5"
            user={e(@event, :provider, nil) || @event}
          />
          <div class="text-lg font-semibold link link-hover">{e(@event, :provider, :name, "Unknown")}</div>
        </LiveRedirect>
        <Bonfire.Upcycle.Web.ResourcePreviewLive
          editable={false}
          resource={e(@event, :resource_inventoried_as, nil)}
        />
      </div>
      <div>
        <div class="text-xl font-bold">
          {l("To")}
        </div>
        <LiveRedirect
          to={~p"/user/" <> e(@event, :receiver, :name, "Unknown")}
          class="flex items-center gap-3"
        >
          <Bonfire.UI.Common.AvatarLive
            class="w-12 h-12 rounded-lg bg-base-content/5"
            user={e(@event, :receiver, nil) || @event}
          />
          <div class="text-lg font-semibold link link-hover">{e(@event, :receiver, :name, "Unknown")}</div>
        </LiveRedirect>
        <Bonfire.Upcycle.Web.ResourcePreviewLive
          editable={false}
          resource={e(@event, :to_resource_inventoried_as, nil)}
        />
      </div>
      <!-- <div class="grid grid-cols-2 grid-rows-5">
        <span>
          {l(" ")}
